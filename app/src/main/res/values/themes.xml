<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TrialApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="AppSearchView" parent="Widget.AppCompat.SearchView" >
        <item name="android:textAlignment">center</item>
    </style>

    <style name="payBtnStyle" parent="@android:style/Widget.Button">
        <item name="android:background">@color/purple_200</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="otpBtnStyle" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/blue_rounded_shape</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="pinButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/blue_rounded_shape</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="otpHeaderStyle">
        <item name="android:background">@color/purple_500</item>
    </style>

    <style name="tabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/teal_700</item>
    </style>

    <style name="pinHeaderStyle">
        <item name="android:background">@color/teal_200</item>
    </style>

    <style name="paymentTileStyle">
        <item name="android:background">@color/purple_200</item>
    </style>

    <style name="paymentTileTextStyle">
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="paymentTileDividerStyle">
        <item name="android:background">?android:textColorPrimary</item>
    </style>



    <style name="MapsDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <!--<item name="android:windowCloseOnTouchOutside">false</item>-->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">     @android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize|stateVisible</item>
    </style>
</resources>