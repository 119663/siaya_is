<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_booking"
            android:layout_width="100dp"
            android:layout_height="180dp"
            android:scaleType="fitXY"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_booking_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Order number:"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/txt_booking_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Booking date:"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/txt_booking_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Booking time:"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/txt_booking_capacity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Septic Tank Capacity:"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/txt_booking_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Location:"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/txt_booking_company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Company:"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/txt_booking_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Status: Placed"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:textSize="14sp"/>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>